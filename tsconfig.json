{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
     "lib": ["es2015", "es2017", "dom"],
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./tests/**"
  ]
}
